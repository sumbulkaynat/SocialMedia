<link rel="stylesheet" href="/css/header.css">
<header>
    <div id="header-name">
        ShareEmo
    </div>
    
    <div id="header-list">
        <ul>
            <% if(locals.user){ %>
                <li>
                    <a href="/users/profile">
                        <%= user.name %>
                    </a>
                </li>
                <li>
                    <a href="/users/sign-out">Sign Out</a>
                </li>
            <% }else{ %>
    
                <li>
                    <a href="/users/sign-in">Sign In</a>
                </li>
    
                <li>
                    <a href="/users/sign-up">Sign Up</a>
                </li>
            <% } %>
        </ul>
    </div>


</header>